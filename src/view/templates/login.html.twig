{% extends "base.html.twig" %}
{% block title %}Login Form{% endblock %}
{% block content %}

    {%  if action == "registerOK" %}
        <div class="alert alert-success" role="alert">Successfully Registered!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">close &times;</span>
            </button>
        </div>
    {% endif %}

    <h1 class="text-center alert alert-primary">PWPop - Online Storage</h1>

    <div class="row m-4 text-center">

        <form id="form_login" class="col" action="/login" enctype="application/x-www-form-urlencoded" method="POST">
            <h2 class="mb-4">Login</h2>
            {% if LoginFail == "1" %}
            <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">close &times;</span>
                </button>
                <h4 class="alert-heading" style="color: red">CANNOT LOG INTO THIS ACCOUNT</h4>
                <hr>
                <h5 class="alert-heading" style="color: red">Incorrect username or password</h5>
            </div>
            {% endif %}
            <div class="form-group"><input id="usernameLogin" type="text" name="email" class="form-control-sm" placeholder="Username or Email" onkeyup="comprovaInput('login')"></div>
            <div class="form-group"><span id="error1" style="color: red"></span></div>
            <div class="form-group"><span id="error1_1" style="color: red"></span></div>
            <div class="form-group"><input id="password" type="password" name="password" class="form-control-sm" placeholder="Password" onkeyup="comprovaInput('login')"></div>
            <div class="form-group"><span id="error4" style="color: red"></span></div>
            <div class="form-group"><input id="rememberMe" type="checkbox" name="rememberMe" class="form-control-sm" value="rememberMe"> Remember me</div>
            <div class="form-group"><button class="btn-dark">Send</button></div>
        </form>
    </div>
    <input type="button" value="Go back" class="btn-dark" onclick="history.back()">

    {% if action == "login" and validation == "error" %}
        <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">close &times;</span>
        </button>
        <h4 class="alert-heading" style="color: red">CANNOT LOGIN</h4>
        <hr>
        <h5 class="alert-heading" style="color: red">Please make sure you fulfill all requirements</h5>
    </div>
    {% endif %}

{% endblock %}