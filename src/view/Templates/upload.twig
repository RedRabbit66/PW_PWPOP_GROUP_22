{% extends "base.twig" %}
{% block title %} Files form {% endblock %}
{% block content %}
    <form action="{{ path_for('upload') }}"
          enctype="multipart/form-data"
          method="POST">
        <input type="file" name="files[]" multiple>
        {% if errors is defined %}
            <ol>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ol>
        {% endif %}
        <input type="submit" value="Upload">
    </form>
{% endblock %}
