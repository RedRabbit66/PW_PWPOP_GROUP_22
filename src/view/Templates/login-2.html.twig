{% extends "base.html.twig" %}
{% block title %}Landing{% endblock %}
{% block content %}
    <h1 class="text-center alert alert-primary">PWPop - Online Storage</h1>
    <div class="row m-4 text-center">

        <form id="login" class="col" action="/login" enctype="application/x-www-form-urlencoded" method="POST">
            <h2 class="mb-4">Login</h2>
            <div class="form-group"><input id="emailLogin" type="text" name="email" class="form-control-sm" placeholder="Username or Email" onkeyup="comprovaInput('login')"></div>
            <div class="form-group"><span id="error6" style="color: red"></span></div>
            <div class="form-group"><input id="passwordLogin" type="password" name="password" class="form-control-sm" placeholder="Password" onkeyup="comprovaInput('login')"></div>
            <div class="form-group"><span id="error7" style="color: red"></span></div>
            <div class="form-group"><button class="btn-dark">Send</button></div>
        </form>
    </div>
{% endblock %}
